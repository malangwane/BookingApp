@model BookingApp.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i>Delete Booking</h2>

<div class="alert alert-warning">
    <strong>Are you sure?</strong> You are about to delete this booking.
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3"><i class="fas fa-cube me-1"></i> Resource</dt>
            <dd class="col-sm-9">@Model.Resource?.Name</dd>

            <dt class="col-sm-3"><i class="fas fa-clock me-1"></i> Start Time</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("f")</dd>

            <dt class="col-sm-3"><i class="fas fa-clock me-1"></i> End Time</dt>
            <dd class="col-sm-9">@Model.EndTime.ToString("f")</dd>

            <dt class="col-sm-3"><i class="fas fa-user me-1"></i> Booked By</dt>
            <dd class="col-sm-9">@Model.BookedBy</dd>

            <dt class="col-sm-3"><i class="fas fa-align-left me-1"></i> Purpose</dt>
            <dd class="col-sm-9">@Model.Purpose</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
        <i class="fas fa-trash me-1"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Cancel
    </a>
</div>


<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-1"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete this booking?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Delete
                    </button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
